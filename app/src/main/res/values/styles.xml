<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="second_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">45dp</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:layout_marginTop">456dp</item>
        <item name="android:layout_marginEnd">18dp</item>
        <item name="android:layout_marginRight">18dp</item>
        <item name="android:fontFamily">@font/open_sans_extra_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="second_subtitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:layout_marginEnd">18dp</item>
        <item name="android:layout_marginRight">18dp</item>
        <item name="android:alpha">0.8</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="second_rating_number">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="second_rating_number2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="second_arrow_up">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">175dp</item>
        <item name="android:layout_marginLeft">175dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginEnd">196dp</item>
        <item name="android:layout_marginRight">196dp</item>
    </style>

    <style name="more_details">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">150dp</item>
        <item name="android:layout_marginLeft">150dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="header_background">
        <item name="android:layout_width">412dp</item>
        <item name="android:layout_height">291dp</item>
        <item name="android:transitionName">background_image_transition</item>
    </style>

    <style name="down_arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginEnd">34dp</item>
        <item name="android:layout_marginRight">34dp</item>
    </style>

    <style name="third_scrollview">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="Slider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:paddingStart">50dp</item>
        <item name="android:paddingEnd">50dp</item>
    </style>

    <style name="Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="paragraph">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:alpha">0.5</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="road_map">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:drawableEnd">@drawable/ic_steps</item>
        <item name="android:drawableRight">@drawable/ic_steps</item>
        <item name="android:fontFamily">@font/open_sans_extra_bold</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>